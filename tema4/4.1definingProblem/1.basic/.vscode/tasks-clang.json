{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clang build",
            "type": "shell",
            "command": "/Library/Developer/CommandLineTools/usr/bin/clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-isysroot",
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compila el archivo activo con Clang"
        }
    ]
}
